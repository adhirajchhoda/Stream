# Stream Protocol Environment Configuration Template
# Copy this file to .env.development for local development
# NEVER commit actual secrets to git

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Private key for contract deployment (NEVER use real keys in git)
# Generate: openssl rand -hex 32
PRIVATE_KEY=REPLACE_WITH_SECURE_PRIVATE_KEY

# Network RPC endpoints
INFURA_KEY=REPLACE_WITH_INFURA_PROJECT_ID
ALCHEMY_KEY=REPLACE_WITH_ALCHEMY_API_KEY

# =============================================================================
# BLOCKCHAIN API KEYS
# =============================================================================

# Contract verification services
ETHERSCAN_API_KEY=REPLACE_WITH_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=REPLACE_WITH_POLYGONSCAN_API_KEY

# Gas and price tracking
COINMARKETCAP_API_KEY=REPLACE_WITH_CMC_API_KEY
REPORT_GAS=true

