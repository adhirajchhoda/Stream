# Stream Protocol Web App Environment Configuration

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1
API_SECRET_KEY=your_api_secret_key_here

# Blockchain Configuration
NEXT_PUBLIC_BLOCKCHAIN_RPC_URL=http://localhost:8545
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_NETWORK_NAME=Hardhat Local

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Security Configuration
NEXT_PUBLIC_APP_DOMAIN=localhost:3000
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Database Configuration (for future server-side features)
DATABASE_URL=postgresql://stream_user:stream_demo_password@localhost:5432/stream_demo

# Redis Configuration (for caching and real-time features)
REDIS_URL=redis://localhost:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
NEXT_PUBLIC_ENABLE_ZK_PROOFS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_PAYROLL=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_SERVICES=true

